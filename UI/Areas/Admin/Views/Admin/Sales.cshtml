
@{
    ViewData["Title"] = "Users";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="content" style="background: #f1f2f7;">
    <div class="breadcrumbs">
        <div class="breadcrumbs-inner">
            <div class="row m-0">
                <div class="col-sm-4">
                    <div class="page-header float-left">
                        <div class="page-title">
                            <h1>Dashboard</h1>
                        </div>
                    </div>
                </div>
                <div class="col-sm-8">
                    <div class="page-header float-right">
                        <div class="page-title">
                            <ol class="breadcrumb text-right">
                                <li><a href="/Admin/Admin/Index">Dashboard</a></li>
                                <li class="active"> Sales </li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="content">
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-md-2" style=" font-size: 95%; margin-top: 5%;">
                    <label class="switch switch-3d switch-primary mr-3">
                        <input type="checkbox" class="switch-input" value="CAS" >
                        Case
                        <span class="switch-label"></span> <span class="switch-handle"></span>
                    </label><br />
                    <label class="switch switch-3d switch-primary mr-3">
                        <input type="checkbox" class="switch-input" value="V" >
                        Graphics Card
                        <span class="switch-label"></span> <span class="switch-handle"></span>
                    </label><br />
                    <label class="switch switch-3d switch-primary mr-3">
                        <input type="checkbox" class="switch-input"value="HD" >
                        HDD
                        <span class="switch-label"></span> <span class="switch-handle"></span>
                    </label><br />
                    <label class="switch switch-3d switch-primary mr-3">
                        <input type="checkbox" class="switch-input" value="MO" >
                        Mother Board
                        <span class="switch-label"></span> <span class="switch-handle"></span>
                    </label><br />
                    <label class="switch switch-3d switch-primary mr-3">
                        <input type="checkbox" class="switch-input" value="PS" >
                        Poewr Supply
                        <span class="switch-label"></span> <span class="switch-handle"></span>
                    </label><br />
                    <label class="switch switch-3d switch-primary mr-3">
                        <input type="checkbox" class="switch-input" value="Pr" >
                        Processor
                        <span class="switch-label"></span> <span class="switch-handle"></span>
                    </label><br />
                    <label class="switch switch-3d switch-primary mr-3">
                        <input type="checkbox" class="switch-input" value="R" >
                        RAM
                        <span class="switch-label"></span> <span class="switch-handle"></span>
                    </label><br />
                    <label class="switch switch-3d switch-primary mr-3">
                        <input type="checkbox" class="switch-input" value="SSD" >
                        SSD
                        <span class="switch-label"></span> <span class="switch-handle"></span>
                    </label>

                </div>
                <div class="col-md-10">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title">Sales Table</strong>
                        </div>
                        <div class="card-body">
                            <table id="tblSales" class="table table-striped table-bordered">
                               <thead>
                                   <tr>
                                       <th>UserID</th>
                                       <th>Product Code</th>
                                       <th>Product Quantity</th>
                                       <th>Total Price</th>
                               
                                       <th>Address</th>                            
                                   </tr>
                               </thead>

                            </table>
                        </div>
                    </div>
                </div>


            </div>
        </div><!-- .animated -->
    </div><!-- .content -->
</div>
<script src="~/js/jquery.min.js"></script>
<script type="text/javascript" src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("input[type='checkbox']").click(function () {
            debugger;
            var $data = $(this).val();
            alert($data);
            $.ajax({
                type: "POST",
                url: "/Admin/Admin/SalesData",
                data: { code=$data },
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: OnSuccess(data),
            });
        })})
       
       
   
    function OnSuccess(response) {
        $("#tblSales").DataTable(
            {
                bLengthChange: true,
                lengthMenu: [[10, 20, 50, -1], [10, 20,50, "All"]],
                bFilter: true,
                bSort: true,
                bPaginate: true,
                data: response,
                columns: [{ title: 'User ID', 'data': 'userID', className:'vertical' },
                    { title: 'Product Code', 'data': 'productCode', className: 'vertical' },
                    { title: 'Product Quantity', 'data': 'productQuantity', className: 'vertical' },
                   
                    { title: 'Address', 'data': 'address', className: 'vertical' },
                    { title: 'Date And Time', 'data': 'dateAndTime', className: 'vertical' }]
            });
    };
</script>
