@model string[];
@{
    ViewData["Title"] = "Users";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<input hidden id="code" value="@Model[0]">
<div class="content" style="background: #f1f2f7;">
    <div class="breadcrumbs">
        <div class="breadcrumbs-inner">
            <div class="row m-0">
                <div class="col-sm-4">
                    <div class="page-header float-left">
                        <div class="page-title">
                            <h1>Dashboard</h1>
                        </div>
                    </div>
                </div>
                <div class="col-sm-8">
                    <div class="page-header float-right">
                        <div class="page-title">
                            <ol class="breadcrumb text-right">
                                <li><a href="/Admin/Admin/Index">Dashboard</a></li>
                                <li class="active"> @Model[1] </li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="content">
        <div class="animated fadeIn">
            <div class="row">

                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title">@Model[1] Reviews</strong>
                        </div>
                        <div class="card-body">
                            <table id="tblreviews" class="table table-striped table-bordered">
                            </table>
                        </div>
                    </div>
                </div>


            </div>
        </div><!-- .animated -->
    </div><!-- .content -->
</div>

<script src="~/js/jquery.min.js"></script>
<script type="text/javascript" src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>

<script type="text/javascript">

    $(document).ready(function () {

        var code = $('#code').val();
        $.ajax({
            type: "POST",
            url: "/Admin/Admin/ReviewsData?code=" + code,
            data: '{}',
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: OnSuccess,
            failure: function (response) {
                alert(response.d);
            },
            error: function (response) {
                alert(response.d);
            }
        });

        var AccOrRefMsg = getItemStorage('AccOrRefMsg');

        if (AccOrRefMsg == "AcceptReview") {
            toastr.success('Accepted Done', '', { timeOut: 7000 });
            removeStorage('AccOrRefMsg');
        }
        if (AccOrRefMsg == "RefuseReview") {
            toastr.success('Refused Done', '', { timeOut: 7000 });
            removeStorage('AccOrRefMsg');
        }
        
    });


    function OnSuccess(response) {
        debugger;
        $("#tblreviews").DataTable(
            {
                bLengthChange: true,
                lengthMenu: [[10, 20, 50, -1], [10, 20, 50, "All"]],
                bFilter: true,
                bSort: true,
                bPaginate: true,
                data: response,
                columns: [{ title: 'User Name', 'data': 'customerName', className: 'vertical' },
                { title: 'Comment', 'data': 'comment', className: 'vertical' },
                { title: 'Rate', 'data': 'rate', className: 'vertical' },
                { title: 'Date And Time', 'data': 'dateAndTime', className: 'vertical' },
                //send comment and Dateandtime
                {
                    title: 'Accept Review',data: null,
                    "render": function (data, type, full, meta) {
                        if (full.isAvailable == false) {
                            return '<a  onclick=AcceptReview(' + full.reviewId + ');><i id="correct" class="fa fa-check" style="font-size:x-large; margin-right:7%; color:green;cursor: pointer;"></i></a> <a  onclick=RefuseReview(' + full.reviewId + ');> <i id="wrong" class="fa fa-times" style="font-size:x-large; color:gray"></i></a> ';
                        }
                        else {
                            return '<a  onclick=AcceptReview(' + full.reviewId + ');><i id="correct" class="fa fa-check" style="font-size:x-large; margin-right:7%; color:gray"></i></a> <a onclick=RefuseReview(' + full.reviewId + ');> <i id="wrong" class="fa fa-times" style="font-size:x-large; color:red;cursor: pointer;"></i></a> ';
                        }
                    }
                }]
            });
    };

    function AcceptReview(reviewid) {
        $.ajax({
            type: "POST",
            url: "/Admin/Admin/CheckReview?ID=" + reviewid + "&&Num=1",
            data: '{}',
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (result) {
                debugger;
                if (result == "Accepted") {
                    setItemStorage("AccOrRefMsg", "AcceptReview");
                    location.reload();
                }
                else {
                    toastr.error('Something Wrong', '', { timeOut: 7000 });
                }
            }
        });
    }
    function RefuseReview(reviewid) {
        $.ajax({
            type: "POST",
            url: "/Admin/Admin/CheckReview?ID=" + reviewid + "&&Num=2",
            data: '{}',
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (result) {
                if (result == "Refused") {
                    setItemStorage("AccOrRefMsg", "RefuseReview");
                    location.reload();
                }
                else {
                    toastr.error('Something Wrong', '', { timeOut: 7000 });
                }
            }
        });
    }

    function setItemStorage(itemKey, itemValue) {
        localStorage.setItem(itemKey, JSON.stringify(itemValue));
    }
    function getItemStorage(itemKey) {
        return JSON.parse(localStorage.getItem(itemKey));
    }
    function addValueToItemStorage(itemKey, val) {
        let item = getItemStorage(itemKey);
        item.push(val);
        setItemStorage(itemKey, item);
    }
    function removeItemStorage(itemKey, val) {
        let item = getItemStorage(itemKey);
        item.splice(val, 1);
        setItemStorage(itemKey, item);
    }
    function removeStorage(itemKey) {
        return JSON.parse(localStorage.removeItem(itemKey));
    }
</script>


