@{
    ViewData["Title"] = "Brand";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-body" id="Data" style="border:none;">
                <p>Some text in the modal.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" data-dismiss="modal" style="margin:auto">Close</button>
            </div>
        </div>

    </div>
</div>
<div class="content" style="background: #f1f2f7;">
    <div class="breadcrumbs">
        <div class="breadcrumbs-inner">
            <div class="row m-0">
                <div class="col-sm-4">
                    <div class="page-header float-left">
                        <div class="page-title">
                            <h1>Dashboard</h1>
                        </div>
                    </div>
                </div>
                <div class="col-sm-8">
                    <div class="page-header float-right">
                        <div class="page-title">
                            <ol class="breadcrumb text-right">
                                <li><a href="/Admin/Admin/Index">Dashboard</a></li>
                                <li class="active">Brands </li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="content">
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header" style=" display: flex; justify-content: space-between;">
                            <strong class="card-title">Brands Table</strong>
                            <a onclick="Create()" class="btn btn-outline-info">+</a>
                        </div>
                        <div class="card-body">
                            <table id="tblbrand" class="table table-striped table-bordered">
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- .animated -->
    </div><!-- .content -->
</div>
<script src="~/js/jquery.min.js"></script>
<script type="text/javascript">
    $(function() {
        $.ajax({
            type: "POST",
            url: "/Admin/Admin/BrandData",
            data: '{}',
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: OnSuccess,
            failure: function(response) {
                alert(response.d);
            },
            error: function(response) {
                alert(response.d);
            }
        });
    });
    function OnSuccess(response) {
        $("#tblbrand").DataTable(
            {
                bLengthChange: true,
                lengthMenu: [[10, 20, 50, -1], [10, 20, 50, "All"]],
                bFilter: true,
                bSort: true,
                bPaginate: true,
                data: response,
                columns: [{ title: 'Id', 'data': 'brandId', className: 'vertical' },
                { title: 'Name', 'data': 'brandName', className: 'vertical' },
                {
                    orderable: false, data: null, defaultContent: '', className: 'options vertical',
                    "render": function(data, type, full, meta) {
                        return '<a onclick="Edit({id:' + full.brandId + ",name:'" + full.brandName + "'})" + '" style="margin-left: 5px; margin-right: 5px;"><i style="color:darkblue; font-size:large;" class="fa fa-solid fa-pen-to-square"></i></a>';
                    }
                }]

            });

    };
    function Edit(brand) {
        var BrandName = prompt("Brand Name", brand.name);
        if (BrandName != "" && BrandName != null) {
            $.ajax({
                url: "/Admin/Admin/UpdateBrand?BrandId=" + brand.id + "&BrandName=" + BrandName,
                type: "POST",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function(result) {
                    if (result == "Update") {
                        window.location = "/Admin/Admin/Brand"
                    }
                }
            });
        }

    }
    function Create() {
        var BrandName = prompt("Enter The brand name", "");
        if (BrandName != "" && BrandName != null) {
            $.ajax({
                url: "/Admin/Admin/CreateBrand?newbrand=" + BrandName,
                type: "POST",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function(result) {
                    if (result == "Add") {
                        window.location = "/Admin/Admin/Brand"
                    }
                }
            });
        }
    }
</script>
