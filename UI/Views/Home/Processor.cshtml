<!--breadcrumb-->
<div id="breadcrumb" class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-md-12">
                <ul class="breadcrumb-tree">
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a a asp-area="" asp-controller="Home" asp-action="Motherboard">@ViewData["Title"]</a></li>
                </ul>
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!--breadcrumb-->
<!-- SECTION -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <!-- ASIDE -->
            <div id="aside" class="col-md-3">
                <!-- aside Widget -->
                <div class="aside" id="box">
                    <h3 class="aside-title">Brand</h3>
                    <div class="checkbox-filter cursor-pointer">
                        @foreach (BrandVM brandVM in ViewBag.BrandNamesAndNumbers)
                        {
                            <div class="input-checkbox " id="checkbox" style="display:flex">
                                <input type="checkbox" value="@brandVM.BrandName" class="Kabear" id="@brandVM.BrandName">
                                <label for="@brandVM.BrandName">
                                    <span></span>
                                    @brandVM.BrandName
                                    <small>(@brandVM.BrandNum)</small>
                                </label>
                            </div>
                        }
                    </div>
                </div>
                <!-- /aside Widget -->
                <!-- aside Widget -->
                <div class="aside">
                    <section id="processor">
                        <h3 class="aside-title">Price</h3>
                        <div class="price-filter">
                            <div id="price-slider" style="cursor:pointer"></div>
                            <div class="input-number price-min">
                                <input id="price-min" type="number">
                                <span class="qty-up Processor-up">+</span>
                                <span class="qty-down Processor-down">-</span>
                            </div>

                            <div class="input-number price-max">
                                <input id="price-max" type="number">
                                <span class="qty-up Processor-up">+</span>
                                <span class="qty-down Processor-down">-</span>
                            </div>
                        </div>
                    </section>


                </div>

                <!-- /aside Widget -->
                <!-- /aside Widget -->
            </div>
            <!-- /ASIDE -->
            <!-- STORE -->
            <div id="store" class="col-md-9">
                <!-- store top filter -->
                <div class="store-filter2 clearfix">
                    <div class="store-sort">
                        <label>
                            Sort By:
                            <select id="ProcessorPrice" class="input-select">
                                <option selected disabled>Price</option>
                                <option value="1">High To Low</option>
                                <option value="2">Low To High</option>
                            </select>
                        </label>
                        <label>
                            Show:
                            <select id="ProcessorProduct" class="input-select add">
                                <option selected value="@ViewData["PageSize"]">Default</option>
                                <option value="2">2</option>
                                <option value="5">5</option>
                            </select>
                        </label>
                    </div>
                </div>
                <!-- store products -->
                <div id="Pro" class="row my-4">
                    @if (Model.Data.Count() > 0)
                    {
                        @foreach (ProcessorVM processor in Model.Data)
                        {
                            <div class="col-md-4" style="margin-bottom:6%">
                                <div class="product">
                                    <div class="product-img">
                                        <img src="~/img/product01.png" alt="">
                                        @*<div class="product-label">
                                                <span class="sale">-30%</span>
                                                <span class="new">NEW</span>
                                            </div>*@
                                    </div>
                                    <div class="product-body">
                                        <h3 class="product-name"><a href="#">@processor.ProName</a></h3>
                                        <h4 class="product-price"><span class="price">@processor.ProPrice LE</span> <del class="product-old-price">@(processor.ProPrice + 100) LE</del></h4>
                                        <div class="product-rating">
                                            @for (var i = 1; i < Decimal.Round(processor.ProRate, 1); i++)
                                            {
                                                <i class="fa fa-star"></i>
                                            }
                                            @for (var i = Decimal.Round(processor.ProRate, 1); i <= 5; i++)
                                            {
                                                @if (Decimal.Round(processor.ProRate, 1) != 0)
                                                {
                                                    @if (Math.Floor((i - Math.Floor(i)) * 10) == 0 && i == Decimal.Round(processor.ProRate, 1))
                                                    {
                                                        <i class="fa fa-star"></i>
                                                    }
                                                    else if (Math.Floor((i - Math.Floor(i)) * 10) >= 5 && i == Decimal.Round(processor.ProRate, 1))
                                                    {
                                                        <i class="fa fa-star-half-o" style="color: #D10024"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="fa fa-star-o" style="color: #D10024"></i>
                                                    }
                                                }
                                                else
                                                {
                                                    if (i < 5)
                                                    {
                                                        <i class="fa fa-star-o" style="color: #D10024"></i>
                                                    }
                                                }
                                            }
                                        </div>
                                        <div class="product-btns">
                                            @if(@processor.WishList == true){
                                                <button onclick="AddOrDeleteWL('@processor.ProCode' ,'Delete')" class="add-to-wishlist"><i style="color: #D10024" class="fa fa-heart"></i><span class="tooltipp">Remove from wishlist</span></button>
                                            }
                                            else
                                            {
                                                <button onclick="AddOrDeleteWL('@processor.ProCode' ,'Add')" class="add-to-wishlist"><i class="fa fa-heart-o"></i><span class="tooltipp">add to wishlist</span></button>
                                            }
                                            <button onclick="gotoDetails('@processor.ProCode')" class="quick-view"><i class="fa fa-eye"></i><span class="tooltipp">quick view</span></button>
                                            <button onclick="AddToCart({ Image: '@processor.Image', Name:'@processor.ProName', Code: '@processor.ProCode', Price: @processor.ProPrice, Quantity: 1 ,DBQuantity : @processor.ProQuantity })" data-toggle="blog-tags" data-placement="top" title="Add TO CART">
                                                <i class="fa fa-shopping-cart"></i><span class="tooltipp">add to Cart</span>
                                            </button>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        }
                    }
